<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFirebase.MainPage">

    
    <StackLayout Padding="15">
        <SwipeView>
            <SwipeView.RightItems>
                <SwipeItems>
                    <SwipeItem Text="swipe" BackgroundColor="red"/>
                </SwipeItems>
            </SwipeView.RightItems>
            <Grid HeightRequest="60" WidthRequest="300" BackgroundColor="LightGray">
                <Label Text="Right swipe" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Grid>

        </SwipeView>
    </StackLayout>
</ContentPage>
